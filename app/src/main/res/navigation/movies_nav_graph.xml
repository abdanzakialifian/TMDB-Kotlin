<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movies_nav_graph"
    app:startDestination="@id/splash_screen_fragment">

    <fragment
        android:id="@+id/search_fragment"
        android:name="com.application.zaki.movies.presentation.setting.SettingFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/favorite_fragment"
        android:name="com.application.zaki.movies.presentation.favorite.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/movie_tv_show_fragment"
        android:name="com.application.zaki.movies.presentation.movietvshow.view.MovieTvShowFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_movie_tv_show">
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detail_fragment" />
        <action
            android:id="@+id/action_listFragment_to_listDiscoverFragment"
            app:destination="@id/list_discover_fragment" />
        <argument
            android:name="intentFrom"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="movie"
            app:argType="com.application.zaki.movies.utils.Movie"
            android:defaultValue="POPULAR_MOVIES" />
        <argument
            android:name="tvShow"
            app:argType="com.application.zaki.movies.utils.TvShow"
            android:defaultValue="POPULAR_TV_SHOWS" />
    </fragment>
    <fragment
        android:id="@+id/detail_fragment"
        android:name="com.application.zaki.movies.presentation.detail.view.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="intentFrom"
            android:defaultValue=""
            app:argType="string" />
        <action
            android:id="@+id/action_detailFragment_to_reviewsFragment"
            app:destination="@id/reviews_fragment" />
    </fragment>
    <fragment
        android:id="@+id/list_discover_fragment"
        android:name="com.application.zaki.movies.presentation.movietvshow.view.ListDiscoverFragment"
        android:label="fragment_list_discover"
        tools:layout="@layout/fragment_list_discover">
        <argument
            android:name="genreId"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="intentFrom"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="genreName"
            android:defaultValue=""
            app:argType="string" />
        <action
            android:id="@+id/action_listDiscoverFragment_to_detailFragment"
            app:destination="@id/detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/splash_screen_fragment"
        android:name="com.application.zaki.movies.presentation.splash.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen">
        <action
            android:id="@+id/action_splashScreenFragment_to_movie_fragment"
            app:destination="@id/movie_fragment" />
    </fragment>
    <fragment
        android:id="@+id/reviews_fragment"
        android:name="com.application.zaki.movies.presentation.detail.view.ReviewsFragment"
        android:label="fragment_reviews"
        tools:layout="@layout/fragment_reviews">
        <argument
            android:name="id"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="intentFrom"
            android:defaultValue=""
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/movie_fragment"
        android:name="com.application.zaki.movies.presentation.movie.view.MovieFragment"
        android:label="fragment_tv_shows"
        tools:layout="@layout/fragment_movie">
        <action
            android:id="@+id/action_movie_fragment_to_detailFragment"
            app:destination="@id/detail_fragment" />
        <action
            android:id="@+id/action_movie_fragment_to_movieTvShowFragment"
            app:destination="@id/movie_tv_show_fragment" />
    </fragment>
    <fragment
        android:id="@+id/tv_show_fragment"
        tools:layout="@layout/fragment_tv_show"
        android:name="com.application.zaki.movies.presentation.tvshow.view.TvShowFragment"
        android:label="TvShowsFragment" >
        <action
            android:id="@+id/action_tvShowsFragment_to_detailFragment"
            app:destination="@id/detail_fragment" />
        <action
            android:id="@+id/action_tv_show_fragment_to_movieTvShowFragment"
            app:destination="@id/movie_tv_show_fragment" />
    </fragment>

</navigation>