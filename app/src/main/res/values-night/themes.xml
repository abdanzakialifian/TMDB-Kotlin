<resources>
    <!-- Base application theme. -->
    <style name="Theme.Movies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/dark_red</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomSearchView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="mt_searchBarColor">@color/white</item>
        <item name="mt_searchIconTint">@color/white</item>
        <item name="mt_clearIconTint">@color/white</item>
        <item name="mt_backIconTint">@color/white</item>
        <item name="mt_textColor">@color/white</item>
        <item name="mt_hintColor">@color/white_fifty_percent</item>
        <item name="mt_maxSuggestionsCount">0</item>
    </style>

    <style name="StyleBottomNavigation" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="StyleDotsIndicator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="dotsColor">@color/grey_fifty_percent</item>
        <item name="selectedDotColor">@color/red</item>
    </style>

    <style name="StyleIconTint" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="tint">@color/white</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipCornerRadius">8dp</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="ChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TabLayoutTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TabLayoutStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/grey_fifty_percent</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@color/black</item>
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="CollapsingToolbarStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="ExpandedTitle" parent="@style/TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CollapsedTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>